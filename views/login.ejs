<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>knot</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <link rel="stylesheet" href="style2.css">
  </head>
  <body>
  <div class="nav-div">
      <div class="nav-logo">
        <a href="/login"><img class="logo-img" src="images/knot-logo-inverted.png"></a>
      </div>
  </div>
    <div class="container" ng-app="myApp" ng-controller="myCtrl">
      <div class="container-form">
        <div class="form-title">
          Login
          <hr>
        </div>
        <form name="valid" novalidate action="/login" method="POST">
          <input type="text" ng-model="uname" name="username" placeholder="Username" ng-minlength="3" required/>
          <span ng-show="valid.lname.$touched && valid.lname.$invalid"> Username is invalid </span>

          <input type="password" ng-model="pass" name="password" placeholder="Password" required/>
          <span ng-show="valid.pass.$touched && valid.pass.$invalid"> Password is invalid </span>

          <input type="submit" class="disbuttons" ng-model="submit" name="submit" value="Done" ng-click="trigger()" ng-disabled="valid.$invalid">
          <input type="reset" class="disbuttons" ng-model="reset" name="reset" value="Cancel" ng-click="del()" ng-disabled="valid.$pristine">
          <a href="/register"><button type="button" name="redirect">No Account?</button></a>

        </form>

      </div>
  </body>
</html>
<script type="text/javascript">
  var app = angular
                  .module('myApp',[])
                  .controller("myCtrl",function($scope){
                      var stud = {};
                      var tab = [{fname:"Steve", lname:"John", email:"john@gmail.com", phone:"0123456789"}];
                      $scope.trigger = function(){
                        stud.fname = $scope.fname;
                        stud.lname = $scope.lname;
                        stud.email = $scope.email;
                        stud.pass = $scope.pass;
                        stud.phone = $scope.phone;
                        tab.push(stud);
                      }
                      $scope.students = tab;
                      $scope.del = function() {
                        $scope.myform.$setPristine();
                      }
                  });
</script>
